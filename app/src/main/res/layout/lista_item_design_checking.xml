<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/viia_list_desgin_checking_urlImagen1"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="40dp"
        />
    <ImageView
        android:id="@+id/viia_list_desgin_checking_urlImagen2"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:id="@+id/linearIdDetailsChecking"
            android:paddingTop="0dp"
            >
            <LinearLayout
                    android:id="@+id/LinearList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00012"
                        android:textSize="14sp"
                        android:id="@+id/numeroContador"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="usuario"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/desing_user"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="14sp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:id="@+id/viia_list_desgin_checking_usuario"/>
                </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="0.4"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/viia_list_desgin_checking_CreatedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="CreateAt:"
                    />
                <TextView
                    android:id="@+id/viia_list_desgin_checking_punto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="Punto:"
                    />
                    <TextView
                    android:id="@+id/viia_list_desgin_checking_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="estado:"
                    android:visibility="gone"
                    />
                    <TextView
                        android:id="@+id/viia_list_desgin_checking_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="estado:"
                        android:visibility="gone"
                        />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="right"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/estadoImagen"
                    android:layout_marginTop="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/unlocked" />
            </LinearLayout>

        </LinearLayout>



</LinearLayout>